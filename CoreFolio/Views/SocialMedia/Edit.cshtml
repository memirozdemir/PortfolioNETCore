@model EntityLayer.Concrete.SocialMedia

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hesap Düzenle</h4>
            @using (Html.BeginForm("Edit", "SocialMedia", FormMethod.Post))
            {
                @Html.HiddenFor(x => x.SocialMediaID)
                <div class="form-group">
                    <label>Sosyal Medya İsmi</label>
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Sosyal Medya Linki</label>
                    @Html.TextBoxFor(x => x.Url, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Sosyal Medya Ikonu</label>
                    @Html.TextBoxFor(x => x.Icon, new { @class = "form-control" })
                </div>
                <button class="btn btn-outline-success">Kaydet</button>
                <a href="/SocialMedia/Index/" class="btn btn-dark">İptal et</a>

            }
        </div>
    </div>
</div>






