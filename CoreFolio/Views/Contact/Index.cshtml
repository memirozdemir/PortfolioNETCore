@model List<EntityLayer.Concrete.Message>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">İletişim Mesajları</h4>
            <p class="card-description">
            </p>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th scope="col" class="sort" data-sort="name">İsim</th>
                            <th scope="col" class="sort" data-sort="budget">E-Mail Adresi</th>
                            <th scope="col" class="sort" data-sort="completion">Tarih</th>
                            <th>Detaylar</th>
                            <th scope="col">Sil</th>
                        </tr>
                    </thead>
                    <tbody class="list">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>@item.MessageID</th>
                                <td>@item.Name</td>
                                <td>@item.Mail</td>
                                <td>@item.Date.ToShortDateString()</td>
                                <td>
                                    <a href="/Contact/Details/@item.MessageID" class="btn btn-outline-primary">Detaylar</a>
                                </td>
                                <td>
                                    <a href="/Contact/Delete/@item.MessageID" class="btn btn-outline-danger">Sil</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



