@model EntityLayer.Concrete.Service
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0">Deneyim Düzenle</h3>
    <br />
    <br />
    @using (Html.BeginForm("Edit", "Service", FormMethod.Post))
    {
        @Html.HiddenFor(x => x.ServiceID)
        <label>Servis Adı</label>
        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
        <br />
        <label>Servis Görsel Yolu</label>
        @Html.TextBoxFor(x => x.ImageURL, new { @class = "form-control" })
        <br />
        <button class="btn btn-outline-success">Kaydet</button>
    }
</div>
