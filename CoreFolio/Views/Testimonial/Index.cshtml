@model List<EntityLayer.Concrete.Testimonial>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Referanslar</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th> İsim </th>
                                <th> Şirket </th>
                                <th> Yorum </th>
                                <th> Düzenle </th>
                                <th> Sil </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th>@item.TestimonialID</th>
                                    <td>
                                        <img src="@item.ImageURL" alt="image" />
                                        <span class="pl-2">@item.Name</span>
                                    </td>
                                    <td> @item.Company </td>
                                    <td> @item.Comment </td>
                                    <td><a href="/Testimonial/Edit/@item.TestimonialID" class="btn btn-outline-primary">Düzenle</a></td>
                                    <td><a href="/Testimonial/Delete/@item.TestimonialID" class="btn btn-outline-danger">Sil</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <br />
                    <a href="/Testimonial/Insert" class="btn btn-outline-success">Yeni Referans Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>

