@model EntityLayer.Concrete.Testimonial

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Referans Düzenle</h4>
            @using (Html.BeginForm("Edit", "Testimonial", FormMethod.Post))
            {
                @Html.HiddenFor(x => x.TestimonialID)
                <div class="form-group">
                    <label>Referans İsmi</label>
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Referans Şirket</label>
                    @Html.TextBoxFor(x => x.Company, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label>Referans Yorum</label>
                    @Html.TextAreaFor(x => x.Comment, 20, 4, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Resim Yolu</label>
                    @Html.TextBoxFor(x => x.ImageURL, new { @class = "form-control" })
                </div>
                <button class="btn btn-outline-success">Kaydet</button>
                <a href="/Testimonial/Index/" class="btn btn-dark">İptal et</a>

            }
        </div>
    </div>
</div>






